---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
---

<Layout title="My Favorites - Dotfiles Manager">
  <Header client:load />

  <div class="container py-12">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">My Favorites</h1>
      <p class="text-lg text-muted-foreground">
        Templates you've saved for quick access
      </p>
    </div>

    <div id="favorites-container">
      <!-- Loading state -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {[1, 2, 3].map(() => (
          <div class="rounded-lg border bg-card">
            <div class="p-6 space-y-4">
              <div class="h-6 bg-muted animate-pulse rounded w-3/4"></div>
              <div class="h-4 bg-muted animate-pulse rounded"></div>
              <div class="h-20 bg-muted animate-pulse rounded"></div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <script>
    const API_BASE_URL = import.meta.env.PUBLIC_API_URL || "http://localhost:8080";

    async function loadFavorites() {
      try {
        // Get current user
        const userResponse = await fetch(`${API_BASE_URL}/auth/user`, {
          credentials: 'include'
        });

        if (!userResponse.ok) {
          showLoginPrompt();
          return;
        }

        const user = await userResponse.json();

        // Get favorites
        const favoritesResponse = await fetch(
          `${API_BASE_URL}/api/users/${user.id}/favorites`,
          { credentials: 'include' }
        );

        if (!favoritesResponse.ok) throw new Error("Failed to fetch favorites");

        const data = await favoritesResponse.json();
        const favorites = data.templates || [];

        renderFavorites(favorites, user.id);
      } catch (error) {
        console.error("Error loading favorites:", error);
        showError();
      }
    }

    function showLoginPrompt() {
      const container = document.getElementById("favorites-container");
      container.innerHTML = `
        <div class="rounded-lg border bg-card p-12 text-center">
          <h2 class="text-2xl font-bold mb-4">Sign in to view favorites</h2>
          <p class="text-muted-foreground mb-6">
            Save your favorite templates for quick access
          </p>
          <button
            onclick="window.location.href='${API_BASE_URL}/auth/github'"
            class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2"
          >
            <svg class="mr-2 h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
            </svg>
            Sign in with GitHub
          </button>
        </div>
      `;
    }

    function showError() {
      const container = document.getElementById("favorites-container");
      container.innerHTML = `
        <div class="rounded-lg border border-destructive bg-destructive/10 p-6 text-center">
          <p class="text-destructive">Failed to load favorites. Please try again.</p>
        </div>
      `;
    }

    function renderFavorites(favorites, userId) {
      const container = document.getElementById("favorites-container");

      if (favorites.length === 0) {
        container.innerHTML = `
          <div class="rounded-lg border bg-card p-12 text-center">
            <h2 class="text-2xl font-bold mb-4">No favorites yet</h2>
            <p class="text-muted-foreground mb-6">
              Start browsing templates and save your favorites
            </p>
            <a
              href="/templates"
              class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2"
            >
              Browse Templates
            </a>
          </div>
        `;
        return;
      }

      container.innerHTML = `
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          ${favorites.map(template => `
            <div class="rounded-lg border bg-card flex flex-col">
              <div class="p-6 flex-1">
                <div class="flex items-start justify-between gap-2 mb-4">
                  <h3 class="text-lg font-semibold">${template.metadata?.name || template.name}</h3>
                  ${template.featured ? '<span class="inline-flex items-center rounded-full bg-primary px-2 py-1 text-xs font-medium text-primary-foreground shrink-0">⭐ Featured</span>' : ''}
                </div>

                <p class="text-sm text-muted-foreground mb-4">
                  ${template.metadata?.description || 'No description'}
                </p>

                <div class="grid grid-cols-3 gap-2 text-center mb-4">
                  <div class="rounded-lg bg-muted p-2">
                    <div class="text-sm font-medium">${template.brews?.length || 0}</div>
                    <div class="text-xs text-muted-foreground">Brews</div>
                  </div>
                  <div class="rounded-lg bg-muted p-2">
                    <div class="text-sm font-medium">${template.casks?.length || 0}</div>
                    <div class="text-xs text-muted-foreground">Casks</div>
                  </div>
                  <div class="rounded-lg bg-muted p-2">
                    <div class="text-sm font-medium">${template.downloads || 0}</div>
                    <div class="text-xs text-muted-foreground">Downloads</div>
                  </div>
                </div>

                ${template.metadata?.tags && template.metadata.tags.length > 0 ? `
                  <div class="flex flex-wrap gap-1 mb-4">
                    ${template.metadata.tags.map(tag => `
                      <span class="inline-flex items-center rounded-md bg-secondary px-2 py-1 text-xs font-medium">${tag}</span>
                    `).join('')}
                  </div>
                ` : ''}

                <div class="text-xs text-muted-foreground">
                  by ${template.metadata?.author || 'Unknown'} • v${template.metadata?.version || '1.0.0'}
                </div>
              </div>

              <div class="p-6 pt-0 flex gap-2">
                <a
                  href="/templates/${template.id}"
                  class="flex-1 inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2"
                >
                  View Details
                </a>
                <button
                  onclick="removeFavorite('${userId}', '${template.id}')"
                  class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2"
                  title="Remove from favorites"
                >
                  ❤️
                </button>
              </div>
            </div>
          `).join('')}
        </div>
      `;
    }

    async function removeFavorite(userId, templateId) {
      try {
        const response = await fetch(
          `${API_BASE_URL}/api/users/${userId}/favorites/${templateId}`,
          {
            method: 'DELETE',
            credentials: 'include'
          }
        );

        if (!response.ok) throw new Error("Failed to remove favorite");

        // Reload favorites
        loadFavorites();
      } catch (error) {
        alert('Failed to remove favorite');
      }
    }

    window.removeFavorite = removeFavorite;
    loadFavorites();
  </script>
</Layout>
